{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "lib": ["DOM", "ES2015"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
